<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager

        android:id="@+id/gankitem_show_fragmentparent"
        android:layout_above="@+id/photo_show_nextbtn"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>
    <android.support.v7.widget.CardView
        android:foreground = "?attr/selectableItemBackground"
        android:id="@+id/photo_show_nextbtn"
        app:cardCornerRadius="28dp"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/middle_circlebutton_width"
        android:layout_height="@dimen/middle_circlebutton_width">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_margin="8dp"
                android:background="@drawable/ic_all_inclusive_red_400_24dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/photo_show_nextbtnimg"
                android:scaleType="centerCrop"
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>